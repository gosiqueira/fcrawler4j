<div class="swiper-slide pageSection" id="2784b4cc-ad1b-4179-92e6-2fabb4fc0ffa" data-tab="route" data-pageSectionName="route">
    <div class="content">
        <!-- Jumbotron -->
        <div class="jumbotron LazyBackground" data-backgroundimage="http://cdn.logitravel.it/microsites/circuitos/circuito/day_3_79.jpg">
            <!-- jumbo Box -->
            <section class="jumbo-box positive top right hidden-xs">
                <h3 class="name-before large mb-20">Pechino</h3>
                <span class="likehtag x-small brand-principal">Giorno 3</span>
            </section>
        </div>

        <div class="breadcrumb-container hidden-xs">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="level1">Cina: Pechino, Xian, Shanghai Essenziale in treno</li>
                    <li class="level2">3. Itinerario</li>
                    <li class="active">Giorno 3</li>

                </ol>

            </div>
